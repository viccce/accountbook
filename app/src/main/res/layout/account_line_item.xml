<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/xui_config_color_white">

    <TextView
        android:id="@+id/account_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:textColor="#353535"
        android:text="测试"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/change_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:text="300元"
        android:textColor="#353535"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pay_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/change_money"
        android:text="信用卡"
        android:textColor="@color/xui_config_color_gray_5"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/change_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_type_name"
        android:layout_marginTop="4dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/xui_config_color_gray_5"
        android:textSize="14sp"
        android:text="测试人"/>

    <TextView
        android:id="@+id/change_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_type_name"
        android:layout_toEndOf="@+id/change_user_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/xui_config_color_gray_5"
        android:textSize="14sp"
        android:text="2020-10-10 10:10"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/xui_config_color_gray_9"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="12dp" />

</RelativeLayout>